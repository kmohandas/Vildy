@model Vildy.ViewModel.RandomMovieViewModel

@{
    ViewBag.Title = "Random";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{ 
    var className = Model.Customers.Count > 0 ? "popular" : null;
}

<h2 class="@className">Movies</h2>


@if (Model.Customers.Count == 0)
{
    <text>No one has rented the movies</text>
}
else
{
    <ul>
        @foreach (var customers in Model.Customers)
        {
            <li>
                @customers.Name
            </li>
        }
    </ul>
}